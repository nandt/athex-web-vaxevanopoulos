{% set background_color = content.field_background_color.0['#markup']|clean_class %}
{%  set font_color = content.field_bwb_font_color.0['#markup']|clean_class %}
{%  set button_color = content.field_bwb_button_color.0['#markup']|clean_class %}

<div class="container bwbBanner">
	<div class="row bwbBannerRow {{ background_color }} ">
		<div class="col-12 col-lg-6 bwbBannerText {{ font_color }} ">
			<div class=" subheading ">{{ content.field_bwb_upper_title }}
			</div>
			<div class="heading1 bwbTitle">{{ content.field_bwb_title }}
			</div>
			<div class="body3 bwbBody ">{{ content.field_bwb_body }}
			</div>
			<div class=" bwb_button {{ button_color }} cta3 ">{{ content.field_bwb_cta }}
			</div>
		</div>
		<div class="col-12 col-lg-6 bwbBannerImage">
			<div class="  ">{{ content.field_bwb_image }}
		</div>

	</div>
</div>



<style>

.blue {
    background: linear-gradient(88deg, #21C0F2 -66.86%, #3C06D9 124.88%);
}

.green {
    background: #F1F9F5;
}

.purple {
    background-color: #F7F5FD;
}

.white{
	color: white;
}

.black {
	color: black;
}

.green-button{
	color:#00845D;
}

.bwbBanner{
		margin-top: 200px;
	}

.bwbBannerRow {
    padding: 80px 20px;
    display: flex;
    flex-direction: column;
    align-items: stretch;
}

.bwb_button {
    width: fit-content;
    border: 1px solid #FFF;
    padding: 35px 40px;
	margin-bottom:56px;
}


	.bwbBannerImage img {
    object-fit: scale-down;
    width: 100%;
    height: 335px;


	}

	.bwbBannerImage {
    display: flex;
}

	.bwbTitle{
		padding-bottom:32px;
		padding-top:10px;
	}

	.bwbBody{
		padding-bottom:32px;

	}

.bwb_button.green-button {
	border: 1px solid #00845D;
}

@media(min-width:992px){


	.bwbBannerText {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
	}





.bwbBannerImage {
    display: flex;
    max-width: 400px;
    width: 100%;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
}
	.bwbBannerRow {
    display: flex;
    padding: 48px;
    flex-direction: row;
    justify-content: space-between;
	}

