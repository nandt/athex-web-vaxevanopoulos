{% macro menu_links(items, attributes, menu_level) %}
    {% import _self as menus %}
    {% if items %}
        {% if menu_level == 0 %}
            <ul class="menu_wrapper"{{ attributes }}>
        {% else %}
            <ul>
        {% endif %}
        {% for item in items %}
            <li class="items_wrapper col-lg-4 col-12"{{ item.attributes }}>
                {% if item.below %}
                    <span class="textColorPurple heading5 weightBoldBook">{{item.title}}</span>
                    <div>
                        {% if item.url %}
                            {% if item.below %}
                                <a class="textColorBlack body2 weightBook" href="{{item.url}}">Explore {{item.title}}</a>
                            {% else %}
                                <a class="textColorBlack body2 weightBook" href="{{item.url}}">{{item.title}}</a>
                            {% endif %}
                        {% endif %}
                        {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
                    </div>
                {% else %}
                    <a class="textColorBlack body2 weightBook" href="{{item.url}}">{{item.title}}</a>
                {% endif %}
            </li>
        {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}
 
 